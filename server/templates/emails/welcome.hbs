                        <td bgcolor="#ffffff" align="center" style="padding: 0 40px 40px 40px;">
                            <table border="0" cellspacing="0" cellpadding="0" width="100%">
                                <tr>
                                    <td align="center">
                                        <table border="0" cellspacing="0" cellpadding="0">
                                            <tr>
                                                <td align="center" style="border-radius: 8px; background-color: #667eea;">
                                                    <a href="{{appUrl}}" target="_blank" style="font-size: 18px; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; color: #ffffff; text-decoration: none; padding: 15px 40px; border-radius: 8px; display: inline-block; font-weight: 600;">
