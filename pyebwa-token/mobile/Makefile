# PYEBWA Token Mobile App - Build Automation

.PHONY: help install clean build-dev build-preview build-prod local-build deploy

# Default target
help:
	@echo "PYEBWA Token Mobile App Build Commands"
	@echo "======================================"
	@echo ""
	@echo "Setup Commands:"
	@echo "  install          Install dependencies and setup project"
	@echo "  clean            Clean node modules and Metro cache"
	@echo ""
	@echo "Development Commands:"
	@echo "  start            Start Expo development server"
	@echo "  start-web        Start web development server"
	@echo "  prebuild         Generate native code locally"
	@echo ""
	@echo "Build Commands:"
	@echo "  build-dev        Build development APK (EAS)"
	@echo "  build-preview    Build preview APK (EAS)"
	@echo "  build-prod       Build production bundle (EAS)"
	@echo "  local-build      Build APK locally (requires Android Studio)"
	@echo ""
	@echo "Deployment Commands:"
	@echo "  deploy-web       Deploy web version to server"
	@echo "  check-build      Check latest EAS build status"
	@echo ""
	@echo "Utility Commands:"
	@echo "  lint             Run linting checks"
	@echo "  type-check       Run TypeScript type checking"

# Setup and installation
install:
	@echo "ðŸ“¦ Installing dependencies..."
	npm install
	@echo "âœ… Dependencies installed successfully"

clean:
	@echo "ðŸ§¹ Cleaning project..."
	rm -rf node_modules
	npm install
	npx expo start --clear
	@echo "âœ… Project cleaned successfully"

# Development commands
start:
	@echo "ðŸš€ Starting Expo development server..."
	npx expo start

start-web:
	@echo "ðŸŒ Starting web development server..."
	npx expo start --web

prebuild:
	@echo "âš™ï¸  Generating native Android code..."
	npx expo prebuild --platform android --clean

# EAS Build commands
build-dev:
	@echo "ðŸ”¨ Building development APK with EAS..."
	@echo "âš ï¸  This requires interactive keystore setup if first time"
	npx eas build --platform android --profile development

build-preview:
	@echo "ðŸ”¨ Building preview APK with EAS..."
	@echo "âš ï¸  This requires interactive keystore setup if first time"
	npx eas build --platform android --profile preview

build-prod:
	@echo "ðŸ”¨ Building production bundle with EAS..."
	@echo "âš ï¸  This requires interactive keystore setup if first time"
	npx eas build --platform android --profile production

# Local build (requires Android Studio)
local-build:
	@echo "ðŸ”¨ Building APK locally..."
	@if [ ! -d "android" ]; then \
		echo "ðŸ“± Native code not found, running prebuild..."; \
		npx expo prebuild --platform android; \
	fi
	@echo "ðŸ—ï¸  Building with Gradle..."
	cd android && ./gradlew assembleDebug
	@echo "âœ… APK built successfully!"
	@echo "ðŸ“ Location: android/app/build/outputs/apk/debug/app-debug.apk"

# Web deployment
deploy-web:
	@echo "ðŸŒ Building web version..."
	npx expo export --platform web
	@echo "ðŸ“¤ Deploying to server..."
	@if [ -d "../../../pyebwa-app" ]; then \
		rm -rf ../../../pyebwa-app/*; \
		cp -r dist/* ../../../pyebwa-app/; \
		echo "âœ… Web version deployed to https://rasin.pyebwa.com/pyebwa-app/"; \
	else \
		echo "âŒ Deployment directory not found"; \
	fi

# Build status and monitoring
check-build:
	@echo "ðŸ“Š Checking latest EAS builds..."
	npx eas build:list --limit=5

list-builds:
	@echo "ðŸ“‹ Listing all EAS builds..."
	npx eas build:list

# Code quality
lint:
	@echo "ðŸ” Running linting checks..."
	@if command -v eslint >/dev/null 2>&1; then \
		npx eslint src --ext .ts,.tsx; \
	else \
		echo "âš ï¸  ESLint not configured, skipping..."; \
	fi

type-check:
	@echo "ðŸ” Running TypeScript checks..."
	@if [ -f "tsconfig.json" ]; then \
		npx tsc --noEmit; \
	else \
		echo "âš ï¸  TypeScript not configured, skipping..."; \
	fi

# Device installation
install-apk:
	@echo "ðŸ“± Installing APK on connected device..."
	@if [ -f "android/app/build/outputs/apk/debug/app-debug.apk" ]; then \
		adb install android/app/build/outputs/apk/debug/app-debug.apk; \
		echo "âœ… APK installed successfully"; \
	else \
		echo "âŒ APK not found. Run 'make local-build' first"; \
	fi

# Credentials management
setup-credentials:
	@echo "ðŸ” Setting up EAS credentials..."
	@echo "âš ï¸  This requires interactive input"
	npx eas credentials --platform android

# Project information
info:
	@echo "ðŸ“‹ Project Information"
	@echo "====================="
	@echo "Project: PYEBWA Token Mobile App"
	@echo "Platform: React Native / Expo"
	@echo "Build System: EAS Build"
	@echo ""
	@npx expo --version | sed 's/^/Expo CLI: /'
	@npx eas-cli --version | sed 's/^/EAS CLI: /'
	@echo ""
	@if command -v npx eas whoami >/dev/null 2>&1; then \
		echo "EAS User: $$(npx eas whoami 2>/dev/null || echo 'Not logged in')"; \
	fi

# Complete build and test workflow
build-and-test: clean install type-check build-preview
	@echo "ðŸŽ‰ Build and test workflow completed!"
	@echo "ðŸ“± APK is ready for testing"

# Development workflow
dev: install start

# Production workflow  
prod: clean install type-check build-prod
	@echo "ðŸš€ Production build completed!"